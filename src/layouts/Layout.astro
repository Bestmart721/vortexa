---
import { Toaster } from "react-hot-toast";
import Header from "../components/Header.astro";
import Loader from "../components/React/Loader";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="theme-color" content="#fff" />

		<title>{title}</title>
		<meta
			name="description"
			content="Explore comprehensive weather insights and forecasts with Vortexa. Stay informed about current conditions, forecasts, and meteorological data, and gain valuable insights into weather patterns and trends."
		/>
		<meta
			name="keywords"
			content="Vortexa, Weather App, ChiragChrg, Weather Insights, Meteorology, Weather Forecast, Weather Trends, Climate Data, Weather Information, Weather Tracking, Weather Analysis, Atmospheric Conditions, Weather Updates, Weather Reports, Local Weather, Global Weather, Weather Predictions"
		/>
		<meta
			name="google-site-verification"
			content="YRAUUyc8TP4QJ1s53KAdLxcON9xifQf33BnLeP-F_5Y"
		/>
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="index, follow" />
		<meta name="author" content="ChiragChrg" />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" href="/icons/180.png" />
		<link rel="canonical" href="https://vortexa.netlify.app/" />
		<link rel="manifest" href="/manifest.json" />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Lexend&display=swap"
			rel="stylesheet preload"
			as="style"
		/>
	</head>
	<body>
		<!-- Initial Page Loader -->
		<Loader client:load />

		<Header />
		<slot />

		<!-- React-Hot-Toast Container -->
		<Toaster
			position="top-center"
			containerStyle={{
				top: 65,
			}}
			client:load
		/>
	</body>
</html>

<style is:global>
	/* @import url("https://fonts.googleapis.com/css2?family=Lexend&display=swap"); */

	:root {
		--baseClr: #fff;
		--textClr: #fff;
		--lexend: "Lexend", sans-serif;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		background-color: var(--baseClr);
		color: var(--textClr);
		font-family: var(--lexend);
		overflow: hidden;
	}

	.flex_center {
		display: flex;
		justify-content: center;
		align-items: center;
	}
</style>

<script is:inline>
if ("serviceWorker" in navigator) {
	window.addEventListener("load", () => {
		navigator.serviceWorker
			.register("/serviceWorker.js")
			.catch((RegErr) => {
				console.log("SW Registration failed: ", RegErr);
			});
	});
}
</script>

---
import SearchBar from "./React/SearchBar";
import { VortexSVG } from "../assets";
---

<header
	class="flex gap-4 sm:justify-between items-center mx-4 my-2 px-2 py-2 overflow-hidden bg-black/20 backdrop-blur-md rounded-lg"
>
	<div class="flex_center gap-4">
		<img
			src={VortexSVG.src}
			width="40px"
			height="40px"
			alt="Vortexa_Logo"
			class="animate-[spin_2s_linear_infinite_reverse]"
		/>

		<h1 class="hidden sm:flex text-[1.25em] font-bold tracking-widest">
			VORTEXA
		</h1>
	</div>

	<SearchBar client:load />

	<nav class="hidden sm:flex justify-center items-center gap-4">
		<a
			class="link"
			href="https://github.com/Bestmart721/vortexa"
			target="_blank"
			rel="noreferrer noopener"
		>
			GitHub
		</a>
	</nav>
</header>

<style>
	.link {
		@apply px-2 rounded text-[1.1em] hover:translate-y-[-0.25em] transition-transform;
	}
</style>
